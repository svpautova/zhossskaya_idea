<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/open_gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_gallery_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/picture_from_gallery"
            android:layout_marginBottom="40dp"
            android:textAppearance="@style/Spinner_item"/>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:id="@+id/picture_from_gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/open_gallery_button"
            app:srcCompat="@drawable/cats"
            android:contentDescription="@string/picture" />

</androidx.constraintlayout.widget.ConstraintLayout>